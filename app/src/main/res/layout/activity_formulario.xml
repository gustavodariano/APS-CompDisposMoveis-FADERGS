<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E09145"
    tools:context=".FormularioActivity">

    <EditText
        android:id="@+id/etNome"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="104dp"
        android:backgroundTint="#292C35"
        android:drawableTint="#292C35"
        android:ems="10"
        android:foregroundTint="#292C35"
        android:hint="@string/nome"
        android:inputType="textPersonName"
        android:shadowColor="#000000"
        android:textAlignment="textStart"
        android:textColor="#292C35"
        android:textColorHighlight="#292C35"
        android:textColorHint="#292C35"
        android:textColorLink="#292C35"
        android:textSize="16sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etEndereco"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="52dp"
        android:backgroundTint="#292C35"
        android:drawableTint="#292C35"
        android:ems="10"
        android:foregroundTint="#292C35"
        android:hint="@string/endereco"
        android:inputType="textPersonName"
        android:textAlignment="textStart"
        android:textColor="#292C35"
        android:textColorHighlight="#292C35"
        android:textColorHint="#292C35"
        android:textColorLink="#292C35"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etNome" />

    <EditText
        android:id="@+id/etTelefone"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="48dp"
        android:backgroundTint="#292C35"
        android:drawableTint="#292C35"
        android:ems="10"
        android:foregroundTint="#292C35"
        android:hint="@string/telefone"
        android:inputType="textPersonName"
        android:textAlignment="textStart"
        android:textColor="#292C35"
        android:textColorHighlight="#292C35"
        android:textColorHint="#292C35"
        android:textColorLink="#292C35"
        android:textSize="16sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etEndereco" />

    <Button
        android:id="@+id/btnSalvar"
        android:layout_width="174dp"
        android:layout_height="92dp"
        android:layout_marginTop="68dp"
        android:backgroundTint="#292C35"
        android:text="@string/salvar"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#E09145"
        android:textColorHighlight="#000000"
        android:textColorLink="#000000"
        android:textStyle="bold"
        app:icon="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etTelefone"
        app:rippleColor="#000000" />


</androidx.constraintlayout.widget.ConstraintLayout>